@page
@model Mango.Services.Identity.Pages.Account.Register.RegisterModel
@{
}

<div class="login-page">
	<p>
		<h3>User Registeration</h3>
	</p>

	<partial name="_ValidationSummary" />

	<div class="container border" style="padding:20px">
		<form method="post">
			<input type="hidden" asp-for="RegisterVM.ReturnUrl" />

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.Username"></label>
				</div>
				<div class="col">
					<input type="text" asp-for="RegisterVM.Username" placeholder="Username" class="form-control" />
				</div>

				<span class="text-danger" asp-validation-for="RegisterVM.Username"></span>
			</div>

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.Email"></label>
				</div>
				<div class="col">
					<input type="text" asp-for="RegisterVM.Email" placeholder="Email" class="form-control" />
				</div>

				<span class="text-danger" asp-validation-for="RegisterVM.Email"></span>
			</div>

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.FirstName"></label>
				</div>
				<div class="col">
					<input type="text" asp-for="RegisterVM.FirstName" placeholder="FirstName" class="form-control" />
				</div>

				<span class="text-danger" asp-validation-for="RegisterVM.FirstName"></span>
			</div>

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.LastName"></label>
				</div>
				<div class="col">
					<input type="text" asp-for="RegisterVM.LastName" placeholder="LastName" class="form-control" />
				</div>

				<span class="text-danger" asp-validation-for="RegisterVM.LastName"></span>
			</div>

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.Password"></label>
				</div>
				<div class="col">
					<input type="password" asp-for="RegisterVM.Password" placeholder="Password" class="form-control" />
				</div>
				<span class="text-danger" asp-validation-for="RegisterVM.Password"></span>
			</div>

			<div class="form-group row">
				<div class="col-2">
					<label asp-for="RegisterVM.RoleName"></label>
				</div>
				<div class="col">
					<select asp-for="RegisterVM.RoleName" class="form-control" asp-items="@(new SelectList(Model.RolesVM))"></select>
				</div>
			</div>


			<input type="submit" class="btn btn-primary" value="Register" />
					<input type="submit" class="btn btn-primary" value="Cancel" />


		</form>
	</div>
	<div class="card-footer">
                    <a asp-page="/Account/Login/Index" asp-route-returnUrl="@Model.RegisterVM.ReturnUrl">Login</a>
                </div>
</div>